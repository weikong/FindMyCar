<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/live_finish_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_run_me"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:src="@drawable/abl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="户外跑步"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.king.smart.car.mysmartcarapp.ui.run.view.RunTrainView
                android:id="@+id/view_run_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.king.smart.car.mysmartcarapp.ui.run.view.RunTrainView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view_run_train">

                <com.king.smart.car.mysmartcarapp.ui.run.view.CircleAnimView
                    android:id="@+id/view_circle_anim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.king.smart.car.mysmartcarapp.ui.run.view.CircleAnimView>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
